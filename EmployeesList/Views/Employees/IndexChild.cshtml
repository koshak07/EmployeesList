@model IEnumerable<EmployeesList.Models.Children>

@{
    ViewData["Title"] = "Create Child";
}

<h1>Child List</h1>

<p>
    <a asp-action="CreateChild">Create New Child </a>
</p>



@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Ф.И.О.
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateОfBirth)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" >@Html.DisplayFor(modelItem => item.Fullname)</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.DateОfBirth)
                    </td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                        <a asp-action="Details" asp-route-id="@item.EmployeeId">Back To Parents</a> 
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h3>Нет данных для отображения</h3>
}