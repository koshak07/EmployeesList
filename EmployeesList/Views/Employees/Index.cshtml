@model IEnumerable<EmployeesList.Models.Employee>

@{
    ViewData["Title"] = "Employees List";
    var count = ViewData["count"];

}

<h1>Employees List</h1>

<p>
    <a asp-action="Create">Create Employee</a>
</p>


@if (Model.Count() > 0)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    Ф.И.О.
                </th>
                <th>
                    Count children
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.DateОfBirth)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Position)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>



            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="IndexChild" asp-route-id="@item.Id">@Html.DisplayFor(modelItem => item.Fullname)</a>
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Childrens.Count)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DateОfBirth)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Position)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>
}
else
{
    <h3>Нет данных для отображения</h3>
}